pipeline {
    //agent block
    agent {
        label "headche-label"
    }
    //tools block at the pipeline level
    tools {
       maven 'maven-3' 
    }
    //stage block
    stages {
        stage('maven') {
            steps {
                echo "this is about the maven version"
                sh 'maven --version'
            }
        }
    }
}
